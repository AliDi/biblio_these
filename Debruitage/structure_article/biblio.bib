@InProceedings{Quayle_etal2006,
  Title                    = {{C}omparison of source estimation algorithms / {M}ethods in closed tunel noise measure\-ments.},
  Author                   = {Quayle, A. R. and Dowling, A.P. and Graham, W. R. Graham and Babinsky, H.},
