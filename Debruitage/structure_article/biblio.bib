  Author                   = {Dougherty, R. P. and Walker, B.},
  Booktitle                = {15th AIAA/CEAS Aeroacoustics Conference (30th AIAA Aeroacoustics Conference), Miami, Florida, May 11-13, 2009},
  Year                     = {2009},
