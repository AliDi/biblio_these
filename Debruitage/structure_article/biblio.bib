@InProceedings{Faszer_etal2006,
  Title                    = {{A}coustic {B}eamforming and {H}olography {M}easurements of {M}odified {B}oundary {L}ayer {T}railing-{E}dge {N}oise},
  Author                   = {Faszer, A. and Hynes, T. and Blaabjerg, C. and Shin, H.-C.},
