@InProceedings{DoeblerHeilmann2010,
  Title                    = {{N}ew method for positioning of microphones},
  Author                   = {Döbler, D. and Heilmann, G.},
  Booktitle                = {Proceedings on CD of the 3rd Berlin Beamforming Conference, 24-25 February, 2010},
  Year                     = {2010},
